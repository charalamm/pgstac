#!/bin/bash

set -e

if [[ "${CI}" ]]; then
    set -x
fi

cd /opt/src/

function usage() {
    echo -n \
        "Usage: $(basename "$0")
Format code.

This scripts is meant to be run inside the dev container.

"
}

if [ "${BASH_SOURCE[0]}" = "${0}" ]; then
    echo "Formatting pypgstac..."
    ruff --fix pypgstac/pypgstac
    ruff --fix pypgstac/tests
fi
